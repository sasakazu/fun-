
<%= render 'shared/header' %>


<div class="container">

<div class="row show_follow-wrapper">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= link_to @user.name, @user %></h1>
    </section>

    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
          <% end %>
        </div>
      <% end %>
    </section>

  </aside>
  <div class="col-md-8 follow-fan">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>

</div>



<%= render 'shared/footer' %>
